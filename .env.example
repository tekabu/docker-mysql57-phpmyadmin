# MySQL Production Configuration

# MySQL Root Password (strong password required)
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# Application Database Configuration
MYSQL_DATABASE=app_production
MYSQL_USER=app_user
MYSQL_PASSWORD=your_secure_app_password_here

# Bind MySQL to localhost by default (change only if needed)
MYSQL_BIND_ADDRESS=0.0.0.0

# phpMyAdmin Configuration
# phpMyAdmin is optional and starts only with profile "tools"
PHPMYADMIN_BIND_ADDRESS=127.0.0.1
PHPMYADMIN_PORT=8080
